<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:pv="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/pv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        pv:pv_background_color="@color/black"
        pv:pv_host_text="@string/app_name"
        pv:pv_particle_text="1.0"
        pv:pv_particle_text_size="24sp"
        pv:pv_text_color="@color/white_dark"/>

</RelativeLayout>
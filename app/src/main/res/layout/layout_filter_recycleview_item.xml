<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root_filter_item"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center"
                android:gravity="center">

    <RelativeLayout
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/img_filter_item_display"
            android:layout_width="80dip"
            android:layout_height="80dip"/>

        <TextView
            android:id="@+id/text_filter_item_display"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/trasient_black_dark"
            android:gravity="center"
            android:padding="2dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <View
            android:id="@+id/view_filter_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_filter_item"/>
    </RelativeLayout>

</RelativeLayout>